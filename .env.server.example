# Server environment variables - COPY TO .env.server AND ADD YOUR OWN VALUES
NODE_ENV=development

# Google OAuth credentials
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/callback,http://localhost:3001/email/connect/success

# Frontend URL for redirects
FRONTEND_URL=http://localhost:3001

# Email Testing Configuration
EMAIL_TEST_MODE=true
EMAIL_TEST_ACCOUNT=your_email@gmail.com
EMAIL_TEST_PASSWORD=your_app_password_here
EMAIL_TEST_IMAP_SERVER=imap.gmail.com
EMAIL_TEST_IMAP_PORT=993
EMAIL_TEST_SMTP_SERVER=smtp.gmail.com
EMAIL_TEST_SMTP_PORT=587

# API endpoint (for client-side requests)
API_BASE_URL=http://localhost:5000 